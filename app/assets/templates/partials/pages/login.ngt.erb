<div class="login-page" show-trigger>
  <div class="container">
    <div class="row vs-3">
      <div class="col-sm-6 col-sm-offset-3 col-md-7 col-md-offset-3">
        <h1 class="title">
          Transmission Rails
        </h1>
      </div>
    </div>
    <div class="row vs-5">
      <div class="col-md-2 col-md-offset-3">
        <img src="<%= asset_path('transmission.png') %>" class="img-responsive">
      </div>
      <div class="col-md-5">
        <form class="login">
          <div class="form-group">
            <input type="text" class="form-control input-lg" id="username" placeholder="Username">
          </div>
          <div class="form-group">
            <input type="password" class="form-control input-lg" id="password" placeholder="Password">
          </div>
          <div class="row">
            <div class="col-sm-6">
              <button type="submit" class="btn btn-success btn-lg btn-block">Login</button>
            </div>
            <div class="col-sm-6 text-right">
              <a href="#" class="forgot">
                Forgot your password?
              </a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>